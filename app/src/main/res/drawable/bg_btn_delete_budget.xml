<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270"
                              android:endColor="#f65a2b" android:startColor="#8f4141"/>
                    <stroke android:width="1dp" android:color="#450f0e"/>
                    <corners android:radius="40dp"/>
                    <padding android:bottom="4dp" android:left="4dp"
                             android:right="4dp" android:top="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>