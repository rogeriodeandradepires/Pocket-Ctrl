<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270"
                              android:endColor="#f65a2b" android:startColor="#8f4141"/>
                    <stroke android:width="0.5dp" android:color="#450f0e"/>
                    <corners android:radius="10dp"/>
                    <padding android:bottom="2dp" android:left="5dp"
                             android:right="5dp" android:top="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
