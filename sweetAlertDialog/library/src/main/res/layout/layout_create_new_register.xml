<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundedsquare"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_register_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/colorTextAssistant"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededittextsemitransp"
            android:drawableLeft="@drawable/ic_help"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical|center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:hint="Categoria "
            android:text="Categoria"
            android:textColor="@color/colorTextContent"
            android:textColorHint="@color/colorTextAssistant"
            android:textSize="20sp"
            tools:typeface="serif"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_descEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_register_type"
        android:textColorHint="@color/colorTextAssistant"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededittextsemitransp"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Descrição "
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorTextContent"
            android:textColorHint="@color/colorTextAssistant"
            android:textSize="20sp"
            tools:typeface="serif"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/til_descEvent"
        android:textColorHint="@color/colorTextAssistant"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_valor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededittextsemitransp"
            android:gravity="center_vertical|center_horizontal"
            android:hint="R$ 0,00"
            android:inputType="date"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorTextContent"
            android:textColorHint="@color/colorTextAssistant"
            android:textSize="20sp"
            tools:typeface="serif"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_vencimento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/til_valor"
        android:textColorHint="@color/colorTextAssistant"
        android:theme="@style/TextLabel">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edt_vencimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundededittextsemitransp"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Data de Vencimento"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorTextContent"
            android:textColorHint="@color/colorTextAssistant"
            android:textSize="20sp"
            tools:typeface="serif"/>

    </android.support.design.widget.TextInputLayout>
</RelativeLayout>